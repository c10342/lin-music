page{
  height: 100%;
  background-color: #f1f1f1;
}

.user-info{
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  width: 100%;
  height: 40%;
  background-color: #d43c43;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}

.user-avatar{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  overflow: hidden;
}

.user-nickName{
  font-size: 40rpx;
  margin-top: 20rpx;
}

.nav-content{
  box-sizing: border-box;
  padding: 20rpx;
}

.nav-item{
  width: 100%;
  background-color: #fff;
  line-height: 60rpx;
  padding: 10rpx 30rpx;
  font-size: 36rpx;
  color: #555;
  border-bottom: 1px solid #f1f1f1;
  border-radius: 5rpx;
  box-sizing: border-box;
}