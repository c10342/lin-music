.bottom-modal{
  min-height: 300rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  padding-top: 60rpx;
  box-sizing: border-box;
  z-index: 100;
  background-color: #fff;
  transition: all 0.5s linear;
}
.mask{
  position: fixed;
  z-index: 99;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.3);
}
.close{
  position: absolute;
  right: 0;
  top: 0;
  height: 60rpx;
  width: 60rpx;
}

.icon-shanchu{
  font-size: 60rpx;
}