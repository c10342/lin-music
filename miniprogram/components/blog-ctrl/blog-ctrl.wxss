.blog-ctrl{
  display: flex;
  flex-direction: row;
  width: 100%;
  background-color: #fff;
  align-items: center;
  border-top: 1px solid #ccc;
}

.blog-ctrl text{
  font-size: 30rpx;
  line-height: 80rpx;
  width: 50%;
  text-align: center;
}

.blog-ctrl text{
  border-right: 1px solid #ccc;
}

.blog-ctrl button{
  background-color: #fff;
  width: 50%;
  border: none;
}

.publish-textarea{
  padding: 0 20rpx;
  box-sizing: border-box;
  width: 100%;
  margin-bottom: 80rpx;
  background-color: #fff;
}

.publish{
  padding: 10rpx;
  box-sizing: border-box;
  width: 100%;
}

.publish-btn{
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  font-size: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  width: 150rpx;
  background-color: #d43c43;
  color: #fff;
  z-index: 99;
}